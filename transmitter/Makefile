# Arduino Make file. Refer to https://github.com/sudar/Arduino-Makefile
ARDUINO_DIR = /usr/share/arduino
ARDMK_DIR = /var/src/arduino/Arduino-Makefile
AVRDUDE = ssh wb avrdude
MONITOR_PORT = $(shell ssh wb echo /dev/ttyACM\*)
RESET_CMD = ssh wb /var/src/arduino/Arduino-Makefile/bin/ard-reset-arduino --caterina $(MONITOR_PORT)
OBJDIR = $(shell realpath .)/build-uno
FORCE_MONITOR_PORT=1
AVRDUDE_ARD_PROGRAMMER = arduino
BOARDS_TXT = /usr/share/arduino/hardware/arduino/avr/boards.txt
AVRDUDE_OPTS = -v
ARDUINO_CORE_PATH = /usr/share/arduino/hardware/arduino/avr/cores/arduino
ARDUINO_VAR_PATH  = /usr/share/arduino/hardware/arduino/avr/variants
BOARD_TAG    = uno
USER_LIB_PATH = ../libs
ARDUINO_LIBS = RFReceiver PinChangeInterruptHandler RFTransmitter Adafruit_ADXL343 Adafruit_BMP280_Library Adafruit_BusIO Adafruit_Sensor Wire SPI
ARDUINO_HEADER = Arduino.h
OVERRIDE_EXECUTABLES = 1
CC      = $(CC_NAME)
CXX     = $(CXX_NAME)
AS      = $(AS_NAME)
OBJCOPY = $(OBJCOPY_NAME)
OBJDUMP = $(OBJDUMP_NAME)
AR      = $(AR_NAME)
SIZE    = $(SIZE_NAME)
NM      = $(NM_NAME)
#ARDUINO_VERSION = $(shell arduino --version 2>/dev/null | grep -o -E '\'Arduino:.*$\'' | grep -o -E '[.0-9]+')
ARDUINO_VERSION = 187
include /var/src/arduino/Arduino-Makefile/Arduino.mk
